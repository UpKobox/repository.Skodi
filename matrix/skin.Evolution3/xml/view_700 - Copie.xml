<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="view_700">
	
	
	
	
	
	<control type="image">																				<description>prechargement du discart pour fenetre d'informations</description>					
		<width>300</width>
		<height>300</height>
		<texture>$INFO[listitem.art(discart)]</texture>
	</control>
	
	
	
	
	<control type="image">
		<texture colordiffuse="$VAR[gris]">commun/fond.png</texture>
	</control>
	
	
	<control type="group">
		<animation effect="zoom" start="100" end="33" time="250" center="0,540" condition="!string.isempty(window().property(resume))">conditional</animation>
	<control type="label">
		<height>150</height>
		<left>50</left>
		<aligny>center</aligny>
		<textcolor>$VAR[blanc]</textcolor>
		<shadowcolor></shadowcolor>
		<font>titre</font>
		<label>$INFO[window(home).property(addon_name)]</label>		
	</control>		
	<control type="image">
		<visible>!string.isempty(listitem.art(poster))</visible>
		<top>195</top>
		<left>120</left>
		<width>800</width>
		<height>800</height>
		<texture>$INFO[listitem.art(poster)]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
		<fadetime>10</fadetime>
	</control>
	<control type="image">
		<visible>string.isempty(listitem.art(poster))</visible>
		<top>195</top>
		<left>120</left>
		<width>800</width>
		<height>800</height>
		<texture>$INFO[listitem.icon]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
		<fadetime>10</fadetime>
	</control>
	</control>
	
	<control type="group">
		<animation effect="slide" start="0,0" end="-640,0" time="250" condition="!string.isempty(window().property(resume))">conditional</animation>	
	<control type="image">
		<right>0</right>
		<width>960</width>
		<texture colordiffuse="$VAR[blanc_10%]">commun/texture.png</texture>
	</control>
	<control type="textbox">																			<description>resume</description>
		<left>1970</left>		
		<width>540</width>
		<textcolor>$VAR[blanc_50%]</textcolor>       		
		<shadowcolor></shadowcolor>
		<align>justify</align>
		<aligny>center</aligny>
		<font>r_25</font>	
		<label>[CR][CR]$VAR[resume_700][CR][CR]</label>
		<autoscroll delay="20000" time="4000" repeat="20000">true</autoscroll>   		
	</control>	
	<control type="image">
		<right>960</right>
		<width>20</width>
		<texture>commun/ombre_verticale.png</texture>
	</control>
	<control type="image">
		<left>1920</left>
		<width>20</width>
		<texture flipx="true">commun/ombre_verticale.png</texture>
	</control>
	
	
			
	<control type="image">
		<visible>player.hasvideo + integer.isgreater(container(700).numitems,9)</visible>
		<top>712</top>
		<right>0</right>
		<width>960</width>
		<height>1</height>
		<texture colordiffuse="$VAR[blanc_5%]">commun/texture.png</texture>
	</control>
	<control type="group">
		<animation effect="zoom" start="100,100" end="100,66" center="0,0" condition="player.hasvideo">conditional</animation>
		
	<control type="list" id="700">																		<description>liste des medias</description>				
		<right>0</right>
		<width>960</width>
		<preloaditems>2</preloaditems>
		<scrolltime>250</scrolltime>
		
		<!-- modification de la vignette d'un episode de l'accueil -->
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">info</onfocus><!-- ouverture de la fenetre "informations" --> 
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(focus_10,setfocus(10),00:00,silent)</onfocus><!-- focus au bouton 10 pour modifier la vignette -->	
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(select_10,action(select),00:00,silent)</onfocus><!-- click sur le bouton 10 pour ouvrir la fenetre "dialogselect" -->
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		<!-- suite se passe dans la fenetre dialogselect.xml -->
		
		<!-- actualisation d'un episode de l'accueil -->
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">info</onfocus><!-- ouverture de la fenetre "informations" --> 
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(focus_6,setfocus(6),00:00,silent)</onfocus><!-- focus au bouton 6 pour actualiser l'episode -->	
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(select_6,action(select),00:00,silent)</onfocus><!-- click sur le bouton 6 pour ouvrir la fenetre "dialogselect" -->
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		
		<!-- informations sur un film ou une serie ouvert depuis la fenetre d'informations -->
		<onfocus condition="string.isequal(window(home).property(gerer),informations)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		<onfocus condition="string.isequal(window(home).property(gerer),informations)">info</onfocus><!-- ouverture de la fenetre "dialogvideoinfo" -->
				
		<!-- gestion d'un film -->
		<onfocus condition="string.startswith(window(home).property(gerer),marquer) | string.startswith(window(home).property(gerer),renommer) | string.startswith(window(home).property(gerer),supprimer)">action(contextmenu)</onfocus>
				
		<!-- ouverture des infos de l'album depuis la discographie de l'artiste -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">clearproperty(discographie,home)</onfocus><!-- effacement de la propriete "discographie" -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">alarmclock(close,action(close,music),00:00,silent)</onfocus><!-- fermeture de la fenetre "mymusicnav" -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">info</onfocus><!-- ouverture de la fenetre "dialogmusicinfo" -->
		
		
		<onback>alarmclock(back,noop,00:01,silent)</onback>
		
		
		<onright condition="!string.isempty(listitem.plot) | !string.isempty(listitem.addondescription) | !string.isempty(listitem.addonsummary)">setproperty(resume,oui)</onright>
		
		<onleft condition="string.isempty(window().property(resume))">setfocus(710)</onleft>
		
		
		<onleft>clearproperty(resume)</onleft>
	
	<itemlayout width="960" height="108">			
	<control type="image">
		<bottom>-1</bottom>
		<height>1</height>
		<texture colordiffuse="$VAR[blanc_5%]">commun/texture.png</texture>
	</control>
	<include content="itemlayout_700"/>
	</itemlayout>
	<focusedlayout width="960" height="108">	
	<control type="group">
		<visible>control.hasfocus(700)</visible>
	<control type="image">
		<texture colordiffuse="$VAR[blanc]">commun/texture.png</texture>
	</control>
	<include content="itemlayout_700">
		<param name="couleur1" value="$VAR[gris]"/>
		<param name="couleur2" value="$VAR[gris_50%]"/>
		<param name="couleur3" value="$VAR[couleur_6]"/>
		<param name="scroll" value="true"/>
	</include>
	</control>
	<control type="group">
		<visible>!control.hasfocus(700)</visible>
	<control type="image">
		<bottom>-1</bottom>
		<height>1</height>
		<texture colordiffuse="$VAR[blanc_5%]">commun/texture.png</texture>
	</control>
	<include content="itemlayout_700"/>
	</control>
	<control type="button">		
		<onfocus condition="system.hasalarm(back) + string.isempty(listitem.plot)">clearproperty(resume)</onfocus>	
	</control>
	
	
	</focusedlayout>
	
	</control>
	
	</control>
	
	
	<control type="grouplist" id="710"> 			
		<animation effect="fade" start="0" end="100" delay="250" time="250" condition="string.isempty(window().property(resume))">conditional</animation>
		<top>195</top>
		<left>30</left>
		<height>800</height>
		<itemgap>20</itemgap>
		<orientation>vertical</orientation>
		<usecontrolcoords>true</usecontrolcoords>
		<align>center</align>
		<onright>setfocus(700)</onright>
	<include content="bouton_vue">
		<param name="visible" value="true"/>
		<param name="icone" value="retour2"/>
		<param name="id" value="711"/>
		<param name="onclick1" value="action(back)"/>
	</include>		
	<include content="bouton_vue">
		<param name="visible" value="true"/>
		<param name="icone" value="supprimer"/>
		<param name="id" value="712"/>
		<param name="onclick1" value="replacewindow(home)"/>
	</include>		
	<include content="bouton_vue">
		<param name="visible" value="!string.isempty(container(700).listitem.trailer) + !string.isequal(container(700).listitem.trailer,plugin)"/>
		<param name="icone" value="youtube"/>
		<param name="id" value="713"/>
		<param name="onclick1" value="playmedia($ESCINFO[container(700).listitem.trailer],1)"/>
	</include>	
	<include content="bouton_vue">
		<param name="visible" value="player.hasmedia"/>
		<param name="icone" value="zoom"/>
		<param name="id" value="714"/>
		<param name="onclick1" value="fullscreen"/>
	</include>	
	<include content="bouton_vue">
		<param name="visible" value="player.hasmedia + player.pauseenabled"/>
		<param name="icone" value="$VAR[play_pause]"/>
		<param name="id" value="715"/>
		<param name="onclick1" value="playercontrol(play)"/>
	</include>
	<include content="bouton_vue">
		<param name="visible" value="player.hasmedia"/>
		<param name="icone" value="stop"/>
		<param name="id" value="716"/>
		<param name="onclick1" value="playercontrol(stop)"/>
	</include>		
			
	
	
	
	
	</control>
	
	
	
	<control type="group">																				<description>lecteur video miniature PIP</description>
		<visible>player.hasvideo</visible>
		<top>730</top>
		<right>186</right>
		<width>587</width>
		<height>330</height>
	<control type="image">
		<texture colordiffuse="ff000000">commun/texture.png</texture>	
	</control>
	<control type="videowindow">		
	</control>
	<control type="image">
		<texture colordiffuse="$VAR[blanc]" border="10">commun/bordure.png</texture>	
	</control>
	<control type="image">
		<bottom>-24</bottom>
		<left>-50</left>
		<right>-50</right>
		<height>24</height>
		<texture>commun/ombre.png</texture>	
	</control>
	</control>
	
	</control>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	<control type="label">
		<label>$INFO[]</label>
		<scroll>true</scroll>
	</control>	
	</include>
</includes>