<?xml version="1.0" encoding="UTF-8"?>
<window>	
	<zorder>3</zorder>
	<onload condition="string.isempty(window(home).property(rechercher))">alarmclock(forcer_masquer_tout,noop,00:01,silent)</onload>
	<onunload condition="string.isempty(window(home).property(rechercher))">alarmclock(forcer_masquer_tout,noop,00:01,silent)</onunload>
	<onload>cancelalarm(zoom_interface,silent)</onload>
	<onunload condition="!string.isempty(window(home).property(rechercher))">alarmclock(focus,setfocus(50),00:00,silent)</onunload>
	<onunload>cancelalarm(update,silent)</onunload>
	<onunload condition="string.startswith(window(home).property(gerer),renommer_) | [string.isequal(window(home).property(gerer),actualiser) + string.isempty(window(home).property(valider))]">alarmclock(masquer_tout,noop,00:01,silent)</onunload>						
	<onunload condition="string.startswith(window(home).property(gerer),renommer_) | [string.isequal(window(home).property(gerer),actualiser) + string.isempty(window(home).property(valider))]">clearproperty(gerer,home)</onunload>						
	<onunload condition="string.startswith(window(home).property(gerer),renommer_) | [string.isequal(window(home).property(gerer),actualiser) + string.isempty(window(home).property(valider))]">alarmclock(focus_10,setfocus(10),00:00,silent)</onunload><!-- redonne le focus au container actif de l'accueil -->
	<onunload>clearproperty(valider,home)</onunload>
	<defaultcontrol always="true">1302</defaultcontrol>	
<controls>						
	<control type="image">
		<visible>string.isempty(window(home).property(rechercher))</visible>
		<texture colordiffuse="$VAR[gris]">commun/fond.png</texture>
	</control>
	<include condition="string.isempty(window(home).property(rechercher))" content="clavier_complet">
	</include>
	<include condition="!string.isempty(window(home).property(rechercher))" content="clavier_recherche">
	</include>

	
	
</controls>
</window>
