<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="view_800">
	
	
	
	
	
	
	
	
	







	
	
	<control type="list" id="800">																		<description>liste des medias</description>						
		<visible>!container.content(movies) + !container.content(tvshows) + !container.content(episodes)</visible>
		<animation effect="slide" end="142,0" condition="integer.isless(container(800).numitems,5)">conditional</animation>
		<animation effect="slide" end="202,0" condition="integer.isless(container(800).numitems,4)">conditional</animation>
		<animation effect="slide" end="202,0" condition="integer.isless(container(800).numitems,3)">conditional</animation>
		<animation effect="slide" end="202,0" condition="integer.isless(container(800).numitems,2)">conditional</animation>		
		<top>680</top>
		<height>304</height>
		<preloaditems>2</preloaditems>
		<scrolltime>250</scrolltime>
		<orientation>horizontal</orientation>
		<onfocus>clearproperty(menu_contextuel,home)</onfocus>
		<onup condition="$EXP[librairie_applications] + !string.isempty(window(home).property(menu_contextuel))">action(contextmenu)</onup>
		
		
	<itemlayout width="404" height="300">					
	<control type="image">
		<bottom>0</bottom>
		<left>-6</left>
		<right>-26</right>
		<height>24</height>
		<texture>commun/ombre.png</texture>	
	</control>	
	<control type="image">
		<bottom>24</bottom>
		<left>20</left>
		<texture colordiffuse="$VAR[blanc_15%]">extras/extensions.png</texture>
	</control>
	<control type="label">
		<bottom>24</bottom>
		<left>40</left>
		<right>20</right>
		<height>50</height>
		<align>center</align>
		<aligny>center</aligny>
		<font>b_22</font>
		<textcolor>$VAR[blanc]</textcolor>
		<shadowcolor></shadowcolor>
		<label>$INFO[listitem.label]</label>
	</control>
	<control type="image">
		<top>10</top>
		<bottom>68</bottom>
		<left>20</left>
		<texture colordiffuse="$VAR[blanc]">$INFO[listitem.icon]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
	</control>
	<control type="image">
		<top>10</top>
		<bottom>68</bottom>
		<left>20</left>
		<texture>$INFO[listitem.thumb]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
	</control>
	</itemlayout>
	<focusedlayout width="404" height="300">					
	<control type="image">
		<bottom>0</bottom>
		<left>-6</left>
		<right>-26</right>
		<height>24</height>
		<texture>commun/ombre.png</texture>	
	</control>				
	<control type="image">	
		<animation effect="fade" start="100" end="15" time="250">unfocus</animation>
		<animation effect="fade" start="15" end="100" time="250">focus</animation>
		<bottom>24</bottom>
		<left>20</left>
		<texture>extras/extensions.png</texture>
	</control>	
	<control type="label">
		<animation effect="slide" start="0,0" end="0,-30" time="250">focus</animation>
		<animation effect="slide" start="0,-30" end="0,0" time="250">unfocus</animation>
		<bottom>24</bottom>
		<left>40</left>
		<right>20</right>
		<height>50</height>
		<align>center</align>
		<aligny>center</aligny>
		<font>b_22</font>
		<textcolor>$VAR[blanc]</textcolor>
		<shadowcolor></shadowcolor>
		<label>$INFO[listitem.label]</label>
	</control>
	<control type="group">		
		<animation effect="zoom" start="100" end="75" center="222,108" time="250">focus</animation>
		<animation effect="zoom" start="75" end="100" center="222,108" time="250">unfocus</animation>	
	<control type="image">
		<top>10</top>
		<bottom>68</bottom>
		<left>20</left>
		<texture colordiffuse="$VAR[blanc]">$INFO[listitem.icon]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
	</control>
	<control type="image">
		<top>10</top>
		<bottom>68</bottom>
		<left>20</left>
		<texture>$INFO[listitem.thumb]</texture>
		<aspectratio align="center" aligny="center">keep</aspectratio>
	</control>
	</control>	
	<control type="button">		
		<onfocus condition="!$EXP[librairie_applications] | string.isempty(listitem.dbtype)">clearproperty(menu_contextuel,home)</onfocus>
		<onfocus condition="$EXP[librairie_applications] + !string.isempty(listitem.dbtype)">setproperty(menu_contextuel,oui,home)</onfocus>
	</control>
	</focusedlayout>
	</control>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	<control type="label">
		<label>$INFO[]</label>
		<scroll>true</scroll>
	</control>	
	</include>
</includes>