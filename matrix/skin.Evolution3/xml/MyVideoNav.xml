<?xml version="1.0" encoding="UTF-8"?>
<window>	
	<onload condition="$EXP[librairie_applications]">alarmclock(masquer_tout,noop,00:01,silent)</onload>
	<onunload condition="$EXP[librairie_applications]">alarmclock(masquer_tout,noop,00:01,silent)</onunload>
	<views>700,800</views>
	<onunload>clearproperty(resume)</onunload>	
	<defaultcontrol always="true">700</defaultcontrol>		
<controls>
	<control type="group">	
		<animation effect="slide" start="0,0" end="1920,0" condition="!string.isempty(window(home).property(gerer)) | string.isequal(window(home).property(modifier_miniature_episode),oui)">conditional</animation>
		<animation effect="slide" start="1920,0" end="0,0" delay="1000" time="1" condition="string.isempty(window(home).property(gerer)) + !string.isequal(window(home).property(modifier_miniature_episode),oui)">conditional</animation>

		<include>informations_vues</include>
	
	
		<include>view_700</include>	
		<include condition="$EXP[librairie_applications]">view_800</include>
	</control>
	<!-- masque la fenetre si ouverte en arriere plan pour gerer les medias -->
	<control type="group"> 																				<description>masquage de toute l'interface</description>
		<visible>[$EXP[librairie_applications] + window.isvisible(dialogconfirm.xml)] | system.hasalarm(masquer_tout) | !string.isempty(window(home).property(gerer)) | string.isequal(window(home).property(modifier_miniature_episode),oui) | string.startswith(window(home).property(actualiser_episode),oui)</visible>
		<animation effect="fade" start="100" end="0" time="500" reversible="false">hidden</animation>
	<control type="image">
		<texture colordiffuse="$VAR[gris]">commun/fond.png</texture>	
	</control>
	</control>	
	
	
	
	
	
	
	
	
	
	
	<control type="label">
		<label>$INFO[]</label>
		<scroll>true</scroll>
	</control>	
</controls>	
</window>