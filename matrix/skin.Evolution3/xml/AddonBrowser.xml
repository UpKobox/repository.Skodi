<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload>alarmclock(masquer_tout,noop,00:01,silent)</onload>
	<onunload>alarmclock(masquer_tout,noop,00:01,silent)</onunload>
	<onload>setproperty(fanart_temp,$INFO[window(home).property(fanart)],home)</onload>
	<onload>setproperty(landscape_temp,$INFO[window(home).property(landscape)],home)</onload>
	<onload>setproperty(fanart,extras/ajouter.png,home)</onload>
	<onload>setproperty(landscape,commun/ajouter.png,home)</onload>
	<onunload>setproperty(fanart,$INFO[window(home).property(fanart_temp)],home)</onunload>
	<onunload>setproperty(landscape,$INFO[window(home).property(landscape_temp)],home)</onunload>
	<views>800</views>
	<defaultcontrol always="true">800</defaultcontrol>
<controls>
	<include>informations_vues</include>
	
	
	
	<include>view_800</include>	
	<!-- masque la fenetre si ouverte en arriere plan pour gerer les medias -->
	<control type="group"> 																				<description>masquage de toute l'interface</description>
		<visible>system.hasalarm(masquer_tout)</visible>
		<animation effect="fade" start="100" end="0" time="500" reversible="false">hidden</animation>
	<control type="image">
		<texture colordiffuse="$VAR[gris]">commun/fond.png</texture>	
	</control>
	</control>
</controls>	
</window>