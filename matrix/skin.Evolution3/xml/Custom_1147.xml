<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1147">
	<zorder>1</zorder>	
	<visible>player.hasvideo</visible>
<controls>	
	<control type="group">																				<definition>affichage de la limite d'age et du titre</definition>
	<control type="image">
		<visible>!string.isempty(videoplayer.mpaa) + window.isvisible(fullscreenvideo) + !window.isvisible(videoosd)</visible>
		<animation type="visible" reversible="false">
			<effect type="zoom" start="100,0" end="100,100" delay="3000" center="103,150" time="250"/>
			<effect type="zoom" start="100,100" end="100,0" delay="13000" center="103,150" time="250"/>
			<effect type="fade" start="100" end="0" delay="13250" time="1"/>
		</animation>
		<top>100</top>
		<left>100</left>
		<width>6</width>
		<height>50</height>
		<texture colordiffuse="$VAR[couleur_4]">commun/texture.png</texture>
	</control>
	<control type="label">
		<visible>!string.isempty(videoplayer.mpaa) + window.isvisible(fullscreenvideo) + !window.isvisible(videoosd)</visible>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="3000" time="250"/>
			<effect type="slide" start="0,20" end="0,0" delay="3000" time="250"/>
			<effect type="fade" start="100" end="0" delay="13000" time="250"/>
			<effect type="slide" start="0,0" end="0,20" delay="13000" time="250"/>
		</animation>
		<top>100</top>
		<left>120</left>
		<width>500</width>
		<height>50</height>
		<aligny>center</aligny>		
		<textcolor>$VAR[blanc]</textcolor>		
		<font>r_30</font>		
		<label>$VAR[mpaa_osd]</label>
	</control>	
	<control type="grouplist">
		<visible>window.isvisible(fullscreenvideo) + !window.isvisible(videoosd) + !player.displayafterseek + !player.hasperformedseek(3)</visible>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="3000" time="250"/>
			<effect type="fade" start="100" end="0" delay="13000" time="250"/>
		</animation>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="1000" time="250"/>
		</animation>
		<top>900</top>
		<right>100</right>
		<height>40</height>
		<align>right</align>
		<itemgap>15</itemgap>
		<orientation>horizontal</orientation>
		<usecontrolcoords>true</usecontrolcoords>
	<control type="image">		
		<top>2</top>
		<width>6</width>
		<texture colordiffuse="$VAR[couleur_4]">commun/texture.png</texture>
	</control>
	<control type="label">				
		<top>-2</top>
		<width>auto</width>
		<aligny>center</aligny>		
		<textcolor>$VAR[blanc]</textcolor>		
		<font>b_30</font>		
		<label>$VAR[media_lecteur]</label>
	</control>	
	</control>	
	<control type="textbox">
		<visible>window.isvisible(fullscreenvideo) + !window.isvisible(videoosd) + !player.displayafterseek + !player.hasperformedseek(3)</visible>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="3000" time="250"/>
			<effect type="fade" start="100" end="0" delay="13000" time="250"/>
		</animation>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="1000" time="250"/>
		</animation>
		<top>950</top>
		<right>100</right>
		<width>1200</width>
		<height>100</height>
		<align>right</align>
		<font>r_30</font>
		<textcolor>$VAR[blanc_75%]</textcolor>
		<label>$VAR[titre_lecteur]</label>
	</control>
	</control>
	<control type="image">																				<definition>clearlogo</definition>
		<visible>window.isvisible(fullscreenvideo) + player.paused</visible>
		<animation effect="fade" start="0" end="100" delay="3000" time="5000">visible</animation>
		<animation effect="fade" start="100" end="0" time="2000">hidden</animation>
		<left>100</left>
		<width>490</width>
		<height>1080</height>
		<texture>$VAR[clearlogo_lecteur]</texture>
		<aspectratio aligny="center">keep</aspectratio>
	</control>	
	<control type="textbox">																			<definition>faux clearlogo si pas de clearlogo</definition>	
		<visible>window.isvisible(fullscreenvideo) + player.paused</visible>
		<animation effect="fade" start="0" end="100" delay="3000" time="5000">visible</animation>
		<animation effect="fade" start="100" end="0" time="2000">hidden</animation>
		<left>100</left>
		<width>490</width>
		<height>1080</height>
		<align>center</align>
		<aligny>center</aligny>
		<textcolor>$VAR[blanc]</textcolor>
		<font>titre</font>
		<label>$VAR[clearlogo_lecteur]</label>	
	</control>	




</controls>
</window>
