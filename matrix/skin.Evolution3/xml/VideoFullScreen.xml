<?xml version="1.0" encoding="utf-8"?>
<window>	
	<onload>dialog.close(1103,true)</onload>
	<onload>dialog.close(1104,true)</onload>
	<onload>dialog.close(1105,true)</onload>
	<onload>clearproperty(masquer_1104,home)</onload>
	<onload>clearproperty(episode_suivant,home)</onload>				
	<onload>cancelalarm(masquer_tout,silent)</onload>	
	<onunload>clearproperty(fin_generique,home)</onunload>
	<onunload condition="player.paused | player.forwarding | player.rewinding">playercontrol(play)</onunload>	
	<onunload condition="!player.hasvideo">alarmclock(masquer_tout,noop,00:02,silent)</onunload>
<controls>		
	<control type="image" id="1">																							<definition>assombrissement en pause</definition>
		<animation effect="fade" start="0" end="100" delay="3000" time="2000" condition="player.paused" reversible="false">conditional</animation>
		<animation effect="fade" start="100" end="0" time="1000" condition="!player.paused" reversible="false">conditional</animation>		
		<texture colordiffuse="80000000">commun/texture.png</texture>
	</control>		
	<control type="image" id="1">																							<definition>masque video</definition>
		<visible>window.isvisible(videoosd) | player.displayafterseek | player.hasperformedseek(3)</visible>
		<animation effect="fade" time="500">visiblechange</animation>			
		<height>540</height>
		<texture colordiffuse="e6000000">commun/degrade_haut.png</texture>
	</control>
	<control type="image" id="1">																							<definition>masque video</definition>
		<visible>window.isvisible(videoosd) | player.displayafterseek | player.hasperformedseek(3)</visible>
		<animation effect="fade" time="500">visiblechange</animation>			
		<top>540</top>
		<height>540</height>
		<texture colordiffuse="e6000000">commun/degrade_bas.png</texture>
	</control>
	<control type="group" id="1">																							<definition>barre de progression si avance ou retour lecteur</definition>
		<visible>player.displayafterseek | player.hasperformedseek(3) | window.isvisible(videoosd)</visible>
		<animation type="visible" reversible="false">
			<effect type="fade" start="0" end="100" delay="150" time="250"/>
			<effect type="slide" start="0,100" end="0,0" time="250"/>
		</animation>
		<animation type="hidden" reversible="false">
			<effect type="fade" start="100" end="0" time="250"/>
			<effect type="slide" start="0,0" end="0,100" delay="150" time="250"/>
		</animation>
	<control type="togglebutton" id="1">																					<definition>bouton lecture / pause</definition>
		<bottom>95</bottom>
		<left>165</left>
		<width>50</width>
		<height>50</height>
		<onright condition="!videoplayer.content(livetv)">playercontrol(bigskipforward)</onright>
		<onleft condition="!videoplayer.content(livetv)">playercontrol(bigskipbackward)</onleft>			
		<onup>300</onup>		
		<onclick>playercontrol(play)</onclick>			
		<texturefocus colordiffuse="$VAR[couleur_4]">boutons/osd/lecture.png</texturefocus>	
		<texturenofocus colordiffuse="$VAR[blanc_50%]">boutons/osd/lecture.png</texturenofocus>
		<alttexturefocus colordiffuse="$VAR[couleur_4]">boutons/osd/pause.png</alttexturefocus>
		<alttexturenofocus colordiffuse="$VAR[blanc_50%]">boutons/osd/pause.png</alttexturenofocus>
		<usealttexture>!player.paused + player.pauseenabled</usealttexture>
	</control>
	<control type="label" id="1">   				
		<visible>!videoplayer.content(livetv)</visible>
		<bottom>90</bottom>
		<left>290</left>
		<width>auto</width>
		<height>60</height>
		<align>left</align>
		<aligny>center</aligny>		
		<textcolor>$VAR[blanc_75%]</textcolor>		
		<font>r_30</font>		
		<label>$INFO[videoplayer.time(hh:mm:ss)]</label>
	</control>
	<control type="label" id="1">   				
		<visible>videoplayer.content(livetv)</visible>
		<bottom>90</bottom>
		<left>290</left>
		<width>auto</width>
		<height>60</height>
		<align>left</align>
		<aligny>center</aligny>		
		<textcolor>$VAR[blanc_75%]</textcolor>		
		<font>r_30</font>		
		<label>$INFO[pvr.epgeventelapsedtime(hh:mm:ss)]</label>
	</control>		
	<control type="progress" id="1">
		<visible>!videoplayer.content(livetv)</visible>
		<bottom>115</bottom>
		<right>460</right>
		<left>460</left>
		<height>6</height>
		<reveal>true</reveal>
		<texturebg colordiffuse="$VAR[blanc_75%]">commun/texture.png</texturebg>
		<midtexture colordiffuse="$VAR[couleur_4]">commun/texture.png</midtexture>
		<info>player.progress</info>
	</control>	
	<control type="progress" id="1">
		<visible>videoplayer.content(livetv)</visible>
		<bottom>115</bottom>
		<right>460</right>
		<left>460</left>
		<height>6</height>
		<reveal>true</reveal>
		<texturebg colordiffuse="$VAR[blanc_75%]">commun/texture.png</texturebg>
		<midtexture colordiffuse="$VAR[couleur_4]">commun/texture.png</midtexture>
		<info>pvr.epgeventprogress</info>
	</control>	
	<control type="label" id="1">   				
		<visible>!videoplayer.content(livetv)</visible>
		<bottom>90</bottom>
		<left>1510</left>
		<width>auto</width>
		<height>60</height>
		<align>left</align>
		<aligny>center</aligny>				
		<textcolor>$VAR[blanc_75%]</textcolor>		
		<font>r_30</font>		
		<label>$INFO[videoplayer.timeremaining(hh:mm:ss)]</label>
	</control>
	<control type="label" id="1">   				
		<visible>videoplayer.content(livetv)</visible>
		<bottom>90</bottom>
		<left>1510</left>
		<width>auto</width>
		<height>60</height>
		<align>left</align>
		<aligny>center</aligny>				
		<textcolor>$VAR[blanc_75%]</textcolor>		
		<font>r_30</font>		
		<label>$INFO[pvr.epgeventremainingtime(hh:mm:ss)]</label>
	</control>
	<control type="grouplist" id="1">																						<definition>vitesse de defilement du lecteur</definition>
		<bottom>40</bottom>
		<height>40</height>
		<align>center</align>
		<orientation>horizontal</orientation>
		<usecontrolcoords>true</usecontrolcoords>
	<control type="button" id="1">
		<visible>player.forwarding | player.rewinding</visible>
		<width>auto</width>
		<height>40</height>
		<align>center</align>		
		<aligny>center</aligny>		
		<textoffsetx>20</textoffsetx>
		<font>r_22</font>
		<textcolor>$VAR[blanc_75%]</textcolor>
		<label>[UPPERCASE]$VAR[defilement_lecteur][/UPPERCASE]</label>
		<texturefocus></texturefocus>
		<texturenofocus></texturenofocus>
	</control>
	</control>
	<control type="label" id="1">   				
		<top>30</top>
		<height>40</height>
		<align>center</align>
		<aligny>center</aligny>		
		<textcolor>$VAR[couleur_4]</textcolor>		
		<font>b_40</font>		
		<label>$INFO[system.time(hh:mm)]</label>
	</control>	
	</control>
</controls>
</window>
