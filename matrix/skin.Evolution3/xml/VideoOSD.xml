	</control>
	</control>	
	<control type="group">		
		<animation type="windowopen" reversible="false">
			<effect type="fade" start="0" end="100" delay="250" time="250"/>
			<effect type="slide" start="0,100" end="0,0" time="250"/>
		</animation>
		<animation type="windowclose" reversible="false">
			<effect type="fade" start="100" end="0"/>
