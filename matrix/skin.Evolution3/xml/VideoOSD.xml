	</control>	
	<control type="grouplist">
		<top>30</top>
		<right>100</right>
		<height>40</height>
		<align>right</align>
		<itemgap>15</itemgap>
		<orientation>horizontal</orientation>
		<usecontrolcoords>true</usecontrolcoords>
	<control type="image">		
		<top>2</top>
		<width>6</width>
		<texture colordiffuse="$VAR[couleur_4]">commun/texture.png</texture>
	</control>
	<control type="label">				
		<top>-2</top>
		<width>auto</width>
		<aligny>center</aligny>		
		<textcolor>$VAR[blanc]</textcolor>		
		<font>b_30</font>		
		<label>$VAR[media_lecteur]</label>
	</control>	
	</control>	
	<control type="textbox">																			<definition>titre</definition>
		<top>80</top>
		<right>100</right>
		<width>1200</width>
		<height>100</height>
		<align>right</align>
		<font>r_30</font>
		<textcolor>$VAR[blanc_75%]</textcolor>
