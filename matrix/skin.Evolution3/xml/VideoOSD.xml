	<control type="label">																				<definition>legende des boutons du haut</definition>
		<animation effect="slide" end="-40,0" condition="!player.pauseenabled">conditional</animation>
		<animation effect="slide" end="-40,0" condition="string.isempty(videoplayer.tvshowtitle) | !integer.isgreater(container(401).numitems,0)">conditional</animation>
		<animation effect="slide" end="-40,0" condition="string.isempty(videoplayer.tvshowtitle) | !integer.isgreater(container(402).numitems,0)">conditional</animation>
