			<effect type="fade" start="100" end="0" time="250"/>
			<effect type="slide" start="0,0" end="0,-100" delay="150" time="250"/>
		</animation>
	<control type="grouplist" id="300">																	<definition>boutons du haut</definition>
		<top>25</top>
		<left>100</left>
		<height>50</height>	
		<itemgap>30</itemgap>
		<ondown>400</ondown>
		<orientation>horizontal</orientation>
		<usecontrolcoords>true</usecontrolcoords>		
	<control type="button" id="301">
		<width>50</width>
		<height>50</height>
