	<content sortby="episode" sortorder="descending">videodb://tvshows/titles/$INFO[videoplayer.tvshowdbid]/-1/?xsp=%7B%22rules%22%3A%7B%22and%22%3A%5B%7B%22field%22%3A%22season%22%2C%22operator%22%3A%22lessthan%22%2C%22value%22%3A%5B%22$INFO[videoplayer.season]%22%5D%7D%5D%7D%2C%22type%22%3A%22episodes%22%7D</content>
