		<effect type="fade" start="100" end="0"/>
		<effect type="slide" start="0,0" end="0,100" delay="150" time="250"/>
	</animation>
		<bottom>180</bottom>
		<right>1240</right>
		<height>40</height>
		<onleft>400</onleft>
		<onright>601</onright>
		<onup>300</onup>
		<ondown>400</ondown>
		<itemgap>20</itemgap>
		<align>right</align>
		<orientation>horizontal</orientation>
		<usecontrolcoords>true</usecontrolcoords>
