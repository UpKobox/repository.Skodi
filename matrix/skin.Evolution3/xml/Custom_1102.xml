<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1102">	
	<zorder>10</zorder>	
	<onload>alarmclock(timer_1102,action(select,1102),00:01,silent,loop)</onload>	
	<onunload>cancelalarm(timer_1102,silent)</onunload>
	<defaultcontrol always="true">700</defaultcontrol>	
	<visible>!window.isvisible(extendedprogressdialog) + !system.hasalarm(masquer_tout) + !system.hasalarm(masquer_home)</visible>
	<animation effect="fade" start="100" end="0" delay="1000" time="1">hidden</animation>					
<controls>
	<control type="button" id="700">
		<onclick condition="player.muted">volumeup</onclick>	
	</control>	
	<control type="group">		
		<animation effect="fade" start="100" end="0" delay="1000" time="125" condition="!window.isvisible(volumebar)" reversible="false">conditional</animation>
		<animation effect="fade" start="0" end="100" delay="125" time="125" condition="window.isvisible(volumebar)" reversible="false">conditional</animation>
		<animation effect="slide" start="0,0" end="-850,0" condition="window.isvisible(fullscreenvideo)">conditional</animation>
	<control type="progress" id="999">		
		<info>player.volume</info>
	</control>
	<control type="group">
		<top>35</top>
		<right>110</right>
		<width>80</width>
		<height>80</height>
	<control type="image">
		<texture colordiffuse="$VAR[blanc_25%]">commun/progression/p100.png</texture>
	</control>
	<control type="image">
		<visible>!player.passthrough + integer.isgreater(control.getlabel(999),1)</visible>
		<texture colordiffuse="$VAR[blanc]">commun/progression/p$INFO[control.getlabel(999)].png</texture>
	</control>
	<control type="image">
		<visible>!player.passthrough + [integer.isequal(control.getlabel(999),0) | integer.isequal(control.getlabel(999),1)]</visible>
		<texture colordiffuse="red">commun/progression/p100.png</texture>
	</control>
	<control type="image">
		<visible>player.passthrough | integer.isequal(control.getlabel(999),0) | integer.isequal(control.getlabel(999),1)</visible>
		<top>15</top>
		<right>15</right>
		<width>50</width>
		<height>50</height>
		<texture colordiffuse="$VAR[blanc]">commun/rond_50px.png</texture>
	</control>
	<control type="image">
		<visible>!player.passthrough + !integer.isequal(control.getlabel(999),0) + !integer.isequal(control.getlabel(999),1)</visible>
		<top>15</top>
		<right>15</right>
		<width>50</width>
		<height>50</height>
		<texture colordiffuse="$VAR[couleur_5]">commun/rond_50px.png</texture>
	</control>
	<control type="textbox">
		<visible>!player.passthrough + !integer.isequal(control.getlabel(999),0) + !integer.isequal(control.getlabel(999),1)</visible>
		<top>15</top>
		<right>15</right>
		<width>50</width>
		<height>50</height>
		<textcolor>$VAR[blanc]</textcolor>
		<shadowcolor></shadowcolor>
		<font>b_22</font>
		<align>center</align>
		<aligny>center</aligny>		
		<label>$INFO[control.getlabel(999)]</label>
	</control>	
	<control type="image">
		<visible>!player.passthrough + [integer.isequal(control.getlabel(999),0) | integer.isequal(control.getlabel(999),1)]</visible>
		<top>15</top>
		<right>15</right>
		<width>50</width>
		<height>50</height>
		<texture colordiffuse="red">icones/muet.png</texture>
	</control>	
	<control type="image">
		<visible>player.passthrough</visible>
		<top>15</top>
		<right>15</right>
		<width>50</width>
		<height>50</height>
		<texture colordiffuse="red">icones/cadenas.png</texture>
	</control>
	</control>
	</control>
	<control type="label">
		<label>$INFO[]</label>
		<scroll>true</scroll>
	</control>	
</controls>
</window>