<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="view_700">
	
	
	
	
	
	
	
	<control type="fixedlist" id="700">																	<description>liste des medias</description>						
		<visible>container.content(movies) | container.content(tvshows) | container.content(episodes)</visible>
		<top>688</top>
		<left>-420</left>
		<height>318</height>
		<preloaditems>2</preloaditems>
		<focusposition>1</focusposition>
		<scrolltime>250</scrolltime>
		<orientation>horizontal</orientation>
		
		<!-- modification de la vignette d'un episode de l'accueil -->
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">info</onfocus><!-- ouverture de la fenetre "informations" --> 
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(focus_10,setfocus(10),00:00,silent)</onfocus><!-- focus au bouton 10 pour modifier la vignette -->	
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(select_10,action(select),00:00,silent)</onfocus><!-- click sur le bouton 10 pour ouvrir la fenetre "dialogselect" -->
		<onfocus condition="string.isequal(window(home).property(modifier_miniature_episode),oui)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		<!-- suite se passe dans la fenetre dialogselect.xml -->
		
		<!-- actualisation d'un episode de l'accueil -->
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">info</onfocus><!-- ouverture de la fenetre "informations" --> 
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(focus_6,setfocus(6),00:00,silent)</onfocus><!-- focus au bouton 6 pour actualiser l'episode -->	
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(select_6,action(select),00:00,silent)</onfocus><!-- click sur le bouton 6 pour ouvrir la fenetre "dialogselect" -->
		<onfocus condition="string.isequal(window(home).property(actualiser_episode),oui)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		
		<!-- informations sur un film ou une serie ouvert depuis la fenetre d'informations -->
		<onfocus condition="string.isequal(window(home).property(gerer),informations)">alarmclock(close,action(close,videos),00:00,silent)</onfocus><!-- fermeture de la fenetre "myvideonav" -->
		<onfocus condition="string.isequal(window(home).property(gerer),informations)">info</onfocus><!-- ouverture de la fenetre "dialogvideoinfo" -->
				
		<!-- gestion d'un film -->
		<onfocus condition="string.startswith(window(home).property(gerer),marquer) | string.startswith(window(home).property(gerer),renommer) | string.startswith(window(home).property(gerer),supprimer)">action(contextmenu)</onfocus>
				
		<!-- ouverture des infos de l'album depuis la discographie de l'artiste -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">clearproperty(discographie,home)</onfocus><!-- effacement de la propriete "discographie" -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">alarmclock(close,action(close,music),00:00,silent)</onfocus><!-- fermeture de la fenetre "mymusicnav" -->
		<onfocus condition="!string.isempty(window(home).property(discographie))">info</onfocus><!-- ouverture de la fenetre "dialogmusicinfo" -->
		
		<onup condition="$EXP[librairie_applications] + !string.isempty(listitem.dbtype)">setproperty(menu_contextuel,oui,home)</onup>
		<onup condition="$EXP[librairie_applications] + !string.isempty(listitem.dbtype)">action(contextmenu)</onup>
		<onleft>710</onleft>
		
		
	
		
		
	
	
	<itemlayout width="548" height="321">			
	<include content="itemlayout_700">
		<param name="couleur" value="$VAR[gris_clair]"/>
	</include>
	</itemlayout>
	<focusedlayout width="548" height="321">	
	<control type="group">		
		<animation effect="zoom" start="100" end="120" center="0,160" delay="75" time="250" condition="$EXP[librairie_applications] + control.hasfocus(700)">focus</animation>
		<animation effect="zoom" start="120" end="100" center="0,160" time="125" condition="$EXP[librairie_applications] + !control.hasfocus(700)" reversible="false">unfocus</animation>			
	<include content="itemlayout_700">
		<param name="couleur" value="$VAR[gris_moyen]"/>
	</include>
	</control>
	<control type="button">
		<onfocus condition="$EXP[librairie_applications]">setproperty(menu_contextuel,oui,home)</onfocus>
	</control>		
	</focusedlayout>
	

	</control>	
	
	
	
	
	
	
	
	




	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
