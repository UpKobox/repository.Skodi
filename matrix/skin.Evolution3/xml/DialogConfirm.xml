<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">		
	<zorder>2</zorder>
	<onload>alarmclock(forcer_masquer_tout,noop,00:01,silent)</onload>
	<onunload condition="window.isvisible(fullscreenvideo)">alarmclock(forcer_masquer_tout,noop,00:01,silent)</onunload>	
	<onload condition="!skin.hassetting(pas_de_pause_2) + !skin.hassetting(pas_de_pause_1) + player.hasvideo + !player.paused + window.isvisible(fullscreenvideo)">setproperty(pause,non,home)</onload>
	<onload condition="!skin.hassetting(pas_de_pause_2) + !skin.hassetting(pas_de_pause_1) + player.hasvideo + !player.paused + window.isvisible(fullscreenvideo)">playercontrol(play)</onload>
	<onunload condition="!skin.hassetting(pas_de_pause_2) + !skin.hassetting(pas_de_pause_1) + !string.isempty(window(home).property(pause))">playercontrol(play)</onunload>
	<onunload>clearproperty(pause,home)</onunload>		
	<onload>clearproperty(reponse,home)</onload>
	<onunload condition="$EXP[gestion_librairie] | window.isvisible(addonbrowser.xml)">alarmclock(masquer_tout,noop,00:01,silent)</onunload>
	<onunload condition="window.isvisible(movieinformation) + !string.isequal(window(home).property(liste),casting)">alarmclock(masquer_tout,noop,00:00,silent)</onunload>	
	<onunload condition="string.isequal(window(home).property(reponse),oui) + [string.isequal(window(home).property(gerer),supprimer_film2) | string.isequal(window(home).property(gerer),supprimer_serie2)]">setproperty(gerer,supprimer_3,home)</onunload>
	<onunload condition="!window.isvisible(fullscreenvideo) + [string.isequal(window(home).property(gerer),supprimer_3) | !string.isequal(window(home).property(reponse),oui)]">alarmclock(masquer_tout,noop,00:01,silent)</onunload>
	<onunload condition="!window.isvisible(fullscreenvideo) + [string.isequal(window(home).property(gerer),supprimer_3) | !string.isequal(window(home).property(reponse),oui)]">clearproperty(gerer,home)</onunload>
	<onunload condition="!window.isvisible(fullscreenvideo) + [string.isequal(window(home).property(gerer),supprimer_3) | !string.isequal(window(home).property(reponse),oui)]">dialog.close(movieinformation,true)</onunload>
	<onunload condition="!window.isvisible(addoninformation) + !window.isvisible(fullscreenvideo) + [string.isequal(window(home).property(gerer),supprimer_3) | !string.isequal(window(home).property(reponse),oui)]">alarmclock(focus_10,setfocus(10),00:00,silent)</onunload>
	
	
	<onunload condition="string.isequal(window(home).property(actualiser_episode),oui)">setproperty(actualiser_episode,oui2,home)</onunload>
	<onunload condition="string.startswith(window(home).property(actualiser_episode),oui)">dialog.close(movieinformation,true)</onunload>
	<onunload condition="string.isequal(window(home).property(actualiser_episode),oui2)">alarmclock(focus,setfocus($INFO[window(home).property(liste_courante_episodes)],$VAR[item_liste_a_actualiser],absolute),00:00,silent)</onunload>
	<onunload condition="string.isequal(window(home).property(actualiser_episode),oui2)">clearproperty(actualiser_episode,home)</onunload>
	
	
	<onload condition="window.isvisible(movieinformation) + string.isequal(window(home).property(liste),casting)">dialog.close(progressdialog,true)</onload>
	<onload condition="!string.isequal(window(home).property(liste),casting)">alarmclock(focus_8000,setfocus(8000),00:00,silent)</onload>
	
	
	<onunload condition="string.isequal(window(home).property(liste),casting)">alarmclock(focus_50,setfocus(50),00:00,silent)</onunload>
	<onunload condition="window.isvisible(addonbrowser.xml)">alarmclock(focus_800,setfocus(800),00:00,silent)</onunload>
	<defaultcontrol>100</defaultcontrol>
<controls>	
	<control type="button" id="11">
	</control>
	<control type="button" id="10">	
	</control>	
	<control type="progress" id="20">
	</control>
	<control type="group">
		<visible>!system.hasalarm(masquer_tout)</visible>
		<animation effect="fade" start="0" end="100" time="50">windowopen</animation>
		<animation effect="fade" delay="500" start="100" end="0" time="50" condition="!$EXP[gestion_librairie] + !window.isvisible(fullscreenvideo) + !window.isvisible(addonbrowser.xml)">windowclose</animation>		
	<control type="image">
		<texture colordiffuse="$VAR[gris]">commun/fond.png</texture>
	</control>
	<control type="grouplist">
		<centerleft>50%</centerleft>
		<width>1720</width>
		<align>center</align>
		<itemgap>100</itemgap>
		<orientation>vertical</orientation>
		<usecontrolcoords>true</usecontrolcoords>
	<control type="textbox" id="1">																												<description>titre</description>
		<height min="50">auto</height>
		<aligny>center</aligny>
		<align>center</align>
		<textcolor>$VAR[couleur_1]</textcolor>
		<font>b_34</font>			
	</control>
	<control type="textbox" id="9">																												<description>texte</description>
		<left>100</left>
		<right>100</right>
		<height>auto</height>		
		<textcolor>$VAR[blanc]</textcolor>
		<font>r_28</font>
		<aligny>center</aligny>
		<align>center</align>
		<autoscroll delay="4000" time="4000" repeat="4000">true</autoscroll>
	</control>	
	<control type="image">
		<visible>control.isvisible(20)</visible>
		<centerleft>50%</centerleft>
		<width>170</width>
		<height>170</height>
		<texture colordiffuse="$VAR[blanc_25%]">commun/progression2/fond.png</texture>		
	</control>	
	<control type="image">
		<visible>control.isvisible(20)</visible>
		<centerleft>50%</centerleft>
		<top>-265</top>
		<width>160</width>
		<height>160</height>
		<texture colordiffuse="$VAR[couleur_1]">commun/progression2/p$INFO[control.getlabel(20)].png</texture>		
	</control>	
	<control type="grouplist" id="8000">
		<height>60</height>
		<itemgap>30</itemgap>
		<align>center</align>	
		<orientation>horizontal</orientation>
	<include content="bouton_defaut">
		<param name="visible" value="control.isvisible(11)"/>
		<param name="id" value="110"/>
		<param name="onclick1" value="setproperty(reponse,oui,home)"/>
		<param name="onclick2" value="sendclick(11)"/>
		<param name="label" value="$INFO[control.getlabel(11)]"/>
	</include>	
	<include content="bouton_defaut">
		<param name="visible" value="control.isvisible(10)"/>
		<param name="id" value="100"/>
		<param name="onclick1" value="setproperty(reponse,non,home)"/>
		<param name="onclick2" value="sendclick(10)"/>
		<param name="label" value="$INFO[control.getlabel(10)]"/>
	</include>
	</control>	
	</control>	
	</control>	
	
	
	
	
	<control type="label">
		<label>$INFO[]</label>
	</control>
</controls>
</window>